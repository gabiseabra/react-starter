{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ES6",
    "lib": [
      "es2016",
      "DOM"
    ],
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
